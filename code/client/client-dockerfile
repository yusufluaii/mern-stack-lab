FROM node:14-alpine as builder

RUN mkdir -p /builder

WORKDIR /builder

COPY package.json package-lock.json ./

RUN npm install --silent

COPY . .

RUN npm run-script build

FROM node:14-alpine

WORKDIR /app

COPY --from=builder /builder/build .

EXPOSE 3000

RUN npm i -g serve

CMD [ "serve","-s","." ]